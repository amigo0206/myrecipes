<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <% if logged_in? %>
        <%= link_to "Cuisine Recipes", recipes_path, class: "btn btn-lg btn-success", id: "logo" %>
    <% else %>
       <%= link_to "Cuisine Recipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
    <% end %>
    
    <ul class="nav_ul_item">
      <li class="dropdown">
          <%= link_to '#', class: "btn btn-default btn-warning dropdown-toggle", "data-toggle" => "dropdown" do %>
            Browse By Cuisine <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% Style.all.each do |style| %>
              <li><%= link_to style.name, style_path(style) %></li>
            <% end %>
            <% if logged_in? %>
              <li class='divider'></li>
              <li>
                <%= link_to(new_style_path) do %>
                  New Cuisine
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
    </ul>
    <ul class="nav_ul_item">
      <li class="dropdown">
          <%= link_to '#', class: "btn btn-default btn-warning dropdown-toggle", "data-toggle" => "dropdown" do %>
            Browse By Ingredient <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <% Ingredient.all.each do |ingredient| %>
              <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
            <% end %>
            <% if logged_in? %>
              <li class='divider'></li>
              <li>
                <%= link_to(new_ingredient_path) do %>
                  New Ingredient
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
    </ul>
    <% if logged_in? %>
      <div class="nav-item">
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
      </div>
      <ul class="nav-item">
        <li class="dropdown">
          <%= link_to '#', class: "btn btn-success dropdown-toggle", "data-toggle" => "dropdown" do %>
            User Options <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Logout", logout_path %></li>
          </ul>
        </li>
      </ul>
      
      <div class='pull-right'>
        <div class="pull-left" style="padding-top:10px;">
          <%= link_to gravatar_for(current_user, size:50) %>
        </div>
        <div style="width:90px;padding-top:10px;padding-left:10px;float:right;">
          <small style="color:white;">Logged in as:<br/> <%= current_user.chefname %> </small>
        </div>
      </div>
      
    <% else %>
      <div class="nav-item navbar-right">
        <%= link_to "Login", login_path, class: "btn btn-warning" %>
      </div
    <% end %> 
  </div>
</header>